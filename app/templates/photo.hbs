{{#illiquid-model model as |photo|}}
  {{#memory-scroll key=(concat "photo" photo.id) class="memory-scroll" }}
    <section class="photo">
        <div class="row" id={{photo.id}}>
          <div class="small-12 columns">
            <img src="{{photo.url}}" width="100%"/>
          </div>
        </div>
        <ol class="row" onclick={{action "chooseTalk"}} >
          {{#each photo.talks as |talk|}}
            <li class='small-12 columns accordion' data-talk-id={{talk.id}}>
              <div class="row small-collapse medium-uncollapse">
                  <div class="event-time small-12 medium-4 columns">
                    <p>{{talk.time}}</p>
                  </div>
                <div class="event-info small-12 medium-8 columns">
                  {{#if talk.imageUrl}}
                    <div class="img">
                      <img src="{{talk.imageUrl}}" alt={{talk.title}} class="round" width=46 height=46 data-photo-id={{talk.id}}>
                    </div>
                  {{/if}}
                  <h3>{{talk.title}}</h3>
                  <p>{{array-join talk.speakers ', '}}</p>
                </div>
              </div>
            </li>
          {{/each}}
        </ol>

    </section>
  {{/memory-scroll}}
{{/illiquid-model}}
